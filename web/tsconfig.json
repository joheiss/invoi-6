{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "strict": false,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "types": [
      "jest",
      "node"
    ],
    "lib": [
      "esnext",
      "dom"
    ],
  },
  "exclude": [
    "cypress",
    "e2e"
  ],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true
  }
}
